<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.elixir.makkhankitchens.activity.PopupActivity"
    tools:showIn="@layout/activity_scrolling">

    <com.app.elixir.makkhankitchens.mtplview.MtplEditText
        android:id="@+id/editTextSpecialCommnent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_100dp"
        android:layout_below="@+id/title"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/edittextborder"
        android:gravity="top|left"
        android:hint="Comments"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="4"
        android:minLines="4"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:textCursorDrawable="@drawable/edittextcursorcolor"
        android:textSize="16sp"
        mtplview:TypeFace="@string/fontface_robotoblack" />

</android.support.v4.widget.NestedScrollView>
