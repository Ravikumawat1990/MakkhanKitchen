<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:layout_marginLeft="@dimen/margin_20dp"
    android:layout_marginRight="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:gravity="center"
    android:orientation="vertical">

    <com.app.elixir.makkhankitchens.mtplview.MtplEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25dp"
        android:background="@drawable/edittextborder"
        android:hint="Name"
        android:inputType="text"
        android:padding="@dimen/margin_10dp"
        android:singleLine="true"
        android:textColor="@color/drawerItemColor"
        android:textSize="16sp"
        mtplview:TypeFace="@string/fontface_robotoblack" />


    <com.app.elixir.makkhankitchens.mtplview.MtplEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25dp"
        android:background="@drawable/edittextborder"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/margin_10dp"
        android:singleLine="true"
        mtplview:TypeFace="@string/fontface_robotoblack" />


    <com.app.elixir.makkhankitchens.mtplview.MtplEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25dp"
        android:background="@drawable/edittextborder"
        android:hint="Phone No."
        android:inputType="phone"
        android:padding="@dimen/margin_10dp"
        android:singleLine="true"
        mtplview:TypeFace="@string/fontface_robotoblack" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25dp"
        android:background="@drawable/buttoncorner"
        android:gravity="center"
        android:text="Update Profile"
        android:textColor="@android:color/white" />


</LinearLayout>