<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeCard"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    android:background="@android:color/white"
    android:elevation="@dimen/margin_4dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:id="@+id/mainHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:padding="3dip">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:padding="1dp">

                <ProgressBar
                    android:id="@+id/progressnar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/placeholder1"
                    android:layout_width="@dimen/margin_80dp"
                    android:layout_height="@dimen/margin_80dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/placeholder" />


                <ImageView
                    android:id="@+id/list_image"
                    android:layout_width="@dimen/margin_80dp"
                    android:layout_height="@dimen/margin_80dp"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thumbnail"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:singleLine="true"
                    android:text="Item Name :"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/orderSummeryItemName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/catLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:text="Category :"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/orderSummeryProductCat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:ellipsize="marquee"
                    android:padding="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/addonstext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/textViewAddOn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:text="Quantity :"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/orderSummeryItemQuanti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:padding="@dimen/margin_2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:text="Base Price :"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/orderSummeryItemPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:padding="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/discLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:text="Discount :"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/discountAmt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/proTaxLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:text="Tax :"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/proTax"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"

                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/discLayoutAfter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:text="Discount :"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/discountAmtAfter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/totalLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:text="Price per :"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/itemTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2dp"
                android:weightSum="2">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/totletxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/totleItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"

                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.elixir.makkhankitchens.mtplview.MtplButton
                    android:id="@+id/orderSummeryEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/buttoncorner"
                    android:text="@string/edit"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="gone"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />


                <com.app.elixir.makkhankitchens.mtplview.MtplButton
                    android:id="@+id/orderSummeryRemoveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/buttoncorner"
                    android:text="@string/remove"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>