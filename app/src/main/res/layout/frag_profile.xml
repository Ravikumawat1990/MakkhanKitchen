<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LayoutFirst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="?android:attr/actionBarSize"
            android:visibility="gone">

            <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center_vertical"
                android:text="Username"
                android:textColor="@color/lightGray"
                android:textSize="14sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                android:id="@+id/username_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/font_8dp"
                android:background="@drawable/gray_rect"
                android:gravity="center_vertical"
                android:hint="Enter username"
                android:padding="@dimen/margin_10dp"
                android:singleLine="true"
                android:textColor="@color/lightGray"

                android:textSize="18sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />


            <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:gravity="center_vertical"
                android:text="Email"
                android:textColor="@color/lightGray"
                android:textSize="14sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                android:id="@+id/email_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/font_6dp"
                android:background="@drawable/gray_rect"
                android:gravity="center_vertical"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/margin_10dp"
                android:singleLine="true"
                android:textColor="@color/lightGray"
                android:textSize="18sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:gravity="center_vertical"
                android:text="Phone no."
                android:textColor="@color/lightGray"
                android:textSize="14sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                android:id="@+id/phoneNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/gray_rect"
                android:gravity="center_vertical"
                android:hint="Enter Phone no."
                android:inputType="phone"
                android:padding="@dimen/margin_10dp"

                android:singleLine="true"
                android:textColor="@color/lightGray"
                android:textSize="18sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                android:id="@+id/forgot_pswrd_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/margin_25dp"
                android:paddingTop="@dimen/margin_15dp"
                android:text="Forgot password"
                android:textColor="@color/lightGray"
                android:textSize="16sp"
                android:visibility="gone"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <com.app.elixir.makkhankitchens.mtplview.MtplButton
                android:id="@+id/profileupdatedetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/font_20dp"
                android:background="@drawable/blue_rect"
                android:gravity="center|center_vertical"
                android:hint="UPDATE DETAILS"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <LinearLayout
                android:id="@+id/register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_35dp"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:paddingTop="@dimen/margin_15dp"
                android:visibility="gone">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="New to MyPartz? "
                    android:textColor="@color/lightGray"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Click here to Register"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seconLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_80dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:gravity="left"
                    android:text="Username"
                    android:textColor="@color/lightGray"
                    android:textSize="14sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/inputUserNme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"

                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_80dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textColor="@color/lightGray"
                    android:textSize="14sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"


                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_80dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical">


                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/font_15dp"

                    android:gravity="center_vertical"
                    android:text="Phone no."
                    android:textColor="@color/lightGray"
                    android:textSize="14sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/inputPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:padding="1dp"
                    android:singleLine="true"


                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray"></View>

            <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/margin_25dp"
                android:paddingTop="@dimen/margin_15dp"
                android:text="Forgot password"
                android:textColor="@color/lightGray"
                android:textSize="16sp"
                android:visibility="gone"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <com.app.elixir.makkhankitchens.mtplview.MtplButton
                android:id="@+id/buttonchangePassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@drawable/blue_rect"
                android:gravity="center|center_vertical"
                android:text="CHANGE PASSWORD"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_35dp"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:paddingTop="@dimen/margin_15dp"
                android:visibility="gone">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="New to MyPartz? "
                    android:textColor="@color/lightGray"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Click here to Register"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>