<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LayoutFirst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="?android:attr/actionBarSize">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:gravity="center_vertical"
                    android:text="First Name"
                    android:textColor="@color/lightGray"
                    android:textSize="14sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                    android:id="@+id/username_tv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/font_8dp"
                    android:background="@drawable/gray_rect"
                    android:gravity="center_vertical"
                    android:hint="Enter First Name"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />


                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="Last Name"
                    android:textColor="@color/lightGray"
                    android:textSize="14sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                    android:id="@+id/usernam_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/font_6dp"
                    android:background="@drawable/gray_rect"
                    android:gravity="center_vertical"
                    android:hint="Enter Last Name"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="Primary Phone no."
                    android:textColor="@color/lightGray"
                    android:textSize="14sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                    android:id="@+id/edtPrimaryPno"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/gray_rect"
                    android:editable="false"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:hint="Primary Phone no."
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/forgot_pswrd_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="Secondary Phone"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                    android:id="@+id/edtSecPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/gray_rect"
                    android:gravity="center_vertical"
                    android:hint="Secondary Phone no."
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                    android:id="@+id/email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/gray_rect"
                    android:gravity="center_vertical"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />


                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="Password"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/gray_rect"
                    android:gravity="center_vertical"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <com.app.elixir.makkhankitchens.mtplview.MtplButton
                    android:id="@+id/profileupdatedetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/font_20dp"
                    android:background="@drawable/blue_rect"
                    android:gravity="center|center_vertical"
                    android:text="UPDATE DETAILS"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />

                <LinearLayout
                    android:id="@+id/register_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_35dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_15dp"
                    android:visibility="invisible">
                    <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Click here to Register"
                        android:textColor="@color/lightGray"
                        android:textSize="16sp"
                        mtplview:TypeFace="@string/fontface_robotolight_0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_35dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_15dp"
                    android:visibility="invisible">
                    <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Click here to Register"
                        android:textColor="@color/lightGray"
                        android:textSize="16sp"
                        mtplview:TypeFace="@string/fontface_robotolight_0" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</ScrollView>