<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mtplview="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                android:id="@+id/textViewItemDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5dp"
                android:text="Food, glorious food...The way to a man's heart is through his stomach...An army marches on its stomach....and there are so many other cliches that all centre around one of life's necessities - Eating. Without exception we aim to ensure you a truly unique, unforgettable cuisine experience. We combine the ancient with the modern and take you down the path to losing yourself in the exotic flavours of INDIA."
                android:textSize="15sp"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/lightGray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp">

            <com.app.elixir.makkhankitchens.mtplview.MtplButton
                android:id="@+id/itemdetailbtnAddon"
                android:layout_width="@dimen/margin_160dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/buttoncorner"
                android:text="@string/btnCustomize"
                android:textColor="@android:color/white"
                mtplview:TypeFace="@string/fontface_robotolight_0" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/customizetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/itemDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="vertical">


            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/lightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_5dp">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/itemDetailQuant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/quant"
                    android:textColor="@android:color/black"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/number_picker_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_5dp">

                <com.app.elixir.makkhankitchens.numberPicker.NumberPicker
                    android:id="@+id/number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    numberpicker:max="10"
                    numberpicker:min="1"
                    numberpicker:unit="1"
                    numberpicker:value="-5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center">

                <com.app.elixir.makkhankitchens.mtplview.MtplTextView
                    android:id="@+id/textViewItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Rs. 1000"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    mtplview:TypeFace="@string/fontface_robotolight_0" />
            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/lightGray" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:visibility="gone">


            <com.app.elixir.makkhankitchens.mtplview.MtplButton
                android:id="@+id/btnSpecialCommnent"
                android:layout_width="@dimen/margin_160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttoncorner"
                android:text="Add special Comments"
                android:textColor="@android:color/white" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/lightGray"
            android:visibility="gone" />


        <com.app.elixir.makkhankitchens.mtplview.MtplEditText
            android:id="@+id/conatctUsCommnent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/edittextborder"
            android:gravity="top|left"
            android:hint="Special Comments"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4"
            android:minLines="4"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            mtplview:TypeFace="@string/fontface_robotolight_0" />

        <com.app.elixir.makkhankitchens.mtplview.MtplButton
            android:id="@+id/addtoCartbtn"
            android:layout_width="@dimen/margin_160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/buttoncorner"
            android:text="@string/add_to_cart"
            android:textColor="@android:color/white"
            mtplview:TypeFace="@string/fontface_robotolight_0" />


    </LinearLayout>


</LinearLayout>